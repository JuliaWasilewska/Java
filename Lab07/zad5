import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class Lokal {
    private String nazwaLokalu;
    private String miejscowosc;
    private String kodPocztowy;
    private String ulica;
    private Integer numerDomu;
    private Integer numerLokalu;

    public Lokal(String nazwaLokalu, String adres) {
        this.nazwaLokalu = nazwaLokalu;

        Pattern pattern = Pattern.compile("^(.*?), (\\d{2}-\\d{3}) (.*?) (\\d+)(?:/(\\d+))?$");
        Matcher matcher = pattern.matcher(adres);

        if (matcher.matches()) {
            miejscowosc = matcher.group(1);
            kodPocztowy = matcher.group(2);
            ulica = matcher.group(3);
            numerDomu = Integer.parseInt(matcher.group(4));
            if (matcher.group(5) != null) {
                numerLokalu = Integer.parseInt(matcher.group(5));
            }
        } else {
            throw new IllegalArgumentException("Niepoprawny format adresu");
        }
    }

    @Override
    public String toString() {
        StringBuilder sb = new StringBuilder();
        sb.append(nazwaLokalu).append("\n");
        sb.append("Miasto: ").append(miejscowosc).append("\n");
        sb.append("Ulica: ").append(ulica).append("\n");
        sb.append("Numer domu/lokalu: ").append(numerDomu);
        if (numerLokalu != null) {
            sb.append("/").append(numerLokalu);
        }
        sb.append("\n");
        sb.append("Kod pocztowy: ").append(kodPocztowy).append("\n");
        return sb.toString();
    }

    public static void main(String[] args) {
        Lokal lokal = new Lokal("Sklep spożywczy", "Jana Kilińskiego 4, 80-452 Gdańsk");
        System.out.println(lokal);
    }
}
