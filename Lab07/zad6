public class TransformacjaString {
    public static String usunZnaki(String tekst, Znak znak) {
        StringBuilder sb = new StringBuilder();
        for (char c : tekst.toCharArray()) {
            if (!sprawdzZnak(c, znak)) {
                sb.append(c);
            }
        }
        return sb.toString();
    }

    public static String podmienZnaki(String tekst, Znak znak, String podmien) {
        StringBuilder sb = new StringBuilder();
        for (char c : tekst.toCharArray()) {
            if (sprawdzZnak(c, znak)) {
                sb.append(podmien);
            } else {
                sb.append(c);
            }
        }
        return sb.toString();
    }

    public static String pozostawZnaki(String tekst, Znak znak) {
        StringBuilder sb = new StringBuilder();
        for (char c : tekst.toCharArray()) {
            if (sprawdzZnak(c, znak)) {
                sb.append(c);
            }
        }
        return sb.toString();
    }

    private static boolean sprawdzZnak(char c, Znak znak) {
        switch (znak) {
            case SPOLGLOSKA:
                return Character.isLetter(c) && !jestSamogloska(c);
            case SAMOGLOSKA:
                return jestSamogloska(c);
            case SPACJA:
                return Character.isWhitespace(c);
            case LICZBA:
                return Character.isDigit(c);
            case ZNAK_SPECJALNY:
                return !Character.isLetterOrDigit(c) && !Character.isWhitespace(c);
            default:
                return false;
        }
    }

    private static boolean jestSamogloska(char c) {
        c = Character.toLowerCase(c);
        return c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u';
    }

    public enum Znak {
        SPOLGLOSKA,
        SAMOGLOSKA,
        SPACJA,
        LICZBA,
        ZNAK_SPECJALNY
    }

    public static void main(String[] args) {
        String tekst = "123Test";
        System.out.println(usunZnaki(tekst, Znak.LICZBA)); // "Test"
        System.out.println(podmienZnaki(tekst, Znak.LICZBA, "$")); // "$$$Test"
        System.out.println(pozostawZnaki(tekst, Znak.LICZBA)); // "123"
    }
}
