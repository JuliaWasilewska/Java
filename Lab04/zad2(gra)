import java.util.Random;
import java.util.Scanner;

public class Gra {
    private int liczbaDoOdgadniecia;
    private int zakresOd;
    private int zakresDo;
    private int licznikProb;
    private final int maksymalnaLiczbaProb = 5;
    
    public void rozpocznijGre(int zakresOd, int zakresDo) {
        this.zakresOd = zakresOd;
        this.zakresDo = zakresDo;
        Random rand = new Random();
        this.liczbaDoOdgadniecia = rand.nextInt(zakresDo - zakresOd + 1) + zakresOd;
        this.licznikProb = 0;
        System.out.println("Zgadnij liczbę z zakresu od " + zakresOd + " do " + zakresDo + ".");
    }
    
    public boolean zgadnijLiczbe(int liczba) {
        licznikProb++;
        if (liczba < liczbaDoOdgadniecia) {
            System.out.println("Za mało!");
            return false;
        } else if (liczba > liczbaDoOdgadniecia) {
            System.out.println("Za dużo!");
            return false;
        } else {
            System.out.println("Brawo, odgadłeś liczbę w " + licznikProb + " próbach!");
            return true;
        }
    }
    
    public boolean koniecGry() {
        if (licznikProb >= maksymalnaLiczbaProb) {
            System.out.println("Niestety, nie udało Ci się odgadnąć liczby. Była to liczba " + liczbaDoOdgadniecia + ".");
            return true;
        } else {
            return false;
        }
    }
}
