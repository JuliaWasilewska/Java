import java.util.Random;
import java.util.Scanner;

enum StronaMonety {
    ORZEL,
    RESZKA
}

class Moneta {
    private StronaMonety strona;

    public Moneta() {
        this.rzut();
    }

    public void rzut() {
        Random rand = new Random();
        int losowaLiczba = rand.nextInt(2);
        if (losowaLiczba == 0) {
            this.strona = StronaMonety.ORZEL;
        } else {
            this.strona = StronaMonety.RESZKA;
        }
    }

    public StronaMonety getStrona() {
        return this.strona;
    }
}

public class Symulacja {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Podaj ilość rzutów monetą: ");
        int iloscRzutow = scanner.nextInt();

        Moneta moneta = new Moneta();

        int orzelCount = 0;
        for (int i = 0; i < iloscRzutow; i++) {
            moneta.rzut();
            if (moneta.getStrona() == StronaMonety.ORZEL) {
                orzelCount++;
            }
        }

        double orzelPercentage = ((double) orzelCount / iloscRzutow) * 100;
        double reszkaPercentage = 100 - orzelPercentage;

        System.out.printf("%.0f%% orzeł | %.0f%% reszka dla %d rzutów.\n", orzelPercentage, reszkaPercentage, iloscRzutow);
    }
}
