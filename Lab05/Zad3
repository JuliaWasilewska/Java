public class Car {
    protected String brand;
    protected String color;

    public Car(String brand, String color) {
        this.brand = brand;
        this.color = color;
    }

    public String getInfo() {
        return "Brand: " + brand + ", Color: " + color;
    }
}

public class Sedan extends Car {
    private int numberOfDoors;

    public Sedan(String brand, String color, int numberOfDoors) {
        super(brand, color);
        this.numberOfDoors = numberOfDoors;
    }

    public int getNumberOfDoors() {
        return numberOfDoors;
    }

    @Override
    public String getInfo() {
        return super.getInfo() + ", Type: Sedan, Number of doors: " + numberOfDoors;
    }
}

public class SUV extends Car {
    private boolean allWheelDrive;

    public SUV(String brand, String color, boolean allWheelDrive) {
        super(brand, color);
        this.allWheelDrive = allWheelDrive;
    }

    public boolean hasAllWheelDrive() {
        return allWheelDrive;
    }

    @Override
    public String getInfo() {
        return super.getInfo() + ", Type: SUV, All-wheel drive: " + allWheelDrive;
    }
}

public class SportsCar extends Car {
    private int topSpeed;

    public SportsCar(String brand, String color, int topSpeed) {
        super(brand, color);
        this.topSpeed = topSpeed;
    }

    public int getTopSpeed() {
        return topSpeed;
    }

    @Override
    public String getInfo() {
        return super.getInfo() + ", Type: Sports car, Top speed: " + topSpeed + " mph";
    }
}

public class Main {
    public static void main(String[] args) {
        Car[] cars = new Car[]{
                new Sedan("Toyota", "Blue", 4),
                new SUV("Subaru", "Red", true),
                new SportsCar("Ferrari", "Yellow", 220)
        };

        for (Car car : cars) {
            System.out.println(car.getInfo());
        }
    }
}
