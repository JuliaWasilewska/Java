import java.io.File;

public class InformationProvider {
    public void displayInformation(File file) {
        System.out.println("Nazwa: " + file.getName());
        System.out.println("Ścieżka: " + file.getAbsolutePath());
        System.out.println("Czy jest plikiem: " + file.isFile());
        System.out.println("Czy jest katalogiem: " + file.isDirectory());
        System.out.println("Czy plik istnieje: " + file.exists());
        System.out.println();
    }

    public static void main(String[] args) {
        InformationProvider provider = new InformationProvider();

        File directory = new File("exercise");
        File file1 = new File(directory, "file1.txt");
        File file2 = new File(directory, "file2.txt");
        File file3 = new File(directory, "file3.txt");
        File subdirectory1 = new File(directory, "subdirectory1");
        File subdirectory2 = new File(directory, "subdirectory2");

        // Tworzenie katalogu i plików (opcjonalne)
        directory.mkdirs();
        try {
            file1.createNewFile();
            file2.createNewFile();
            file3.createNewFile();
            subdirectory1.mkdirs();
            subdirectory2.mkdirs();
        } catch (Exception e) {
            e.printStackTrace();
        }

        // Wyświetlanie informacji dla plików i folderów
        provider.displayInformation(file1);
        provider.displayInformation(file2);
        provider.displayInformation(file3);
        provider.displayInformation(subdirectory1);
        provider.displayInformation(subdirectory2);
    }
}
